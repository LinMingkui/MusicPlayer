<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="8dp">
        <TextView
            android:id="@+id/text_song_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/main_text"/>

        <ImageView
            android:id="@+id/img_playing"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:src="@drawable/ic_play"
            android:tint="@color/play_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="歌曲名"
            android:textSize="15sp"
            android:textColor="@color/main_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_song_type"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_song_type_local"/>
            <TextView
                android:id="@+id/text_song_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="歌手名"
                android:textSize="12sp"
                android:textColor="@color/sub_text"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_song_list_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:focusable="false"
        android:tint="@color/main_text"
        android:src="@mipmap/img_song_list_menu"/>
</LinearLayout>