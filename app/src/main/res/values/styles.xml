<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--去标题栏，沉浸状态栏（5.0以上）-->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!--搜索输入框-->
    <style name="SearchEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/hint</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <!--播放界面播放SeekBar-->
    <style name="PlaySeekBar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_play</item>
        <!--<item name="android:thumb">@drawable/seekbar_thumb_play</item>-->
        <item name="android:focusable">true</item>
    </style>
    <!--播放界面音量SeekBar-->
    <style name="VolumeSeekBar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_volume</item>
        <!--<item name="android:thumb">@drawable/seekbar_thumb_play</item>-->
        <item name="android:focusable">true</item>
    </style>

    <!--添加歌单输入框-->
    <style name="AddSongMenuEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/title</item>
        <item name="colorControlActivated">@color/title</item>
    </style>
    <!--首页TabLayout字体大小-->
    <style name="HomeTabLayoutTextStyle">
        <item name="android:textSize">@dimen/home_tablayout_text_size</item>
    </style>
    <!--搜索界面TabLayout字体大小-->
    <style name="SearchTabLayoutTextStyle">
        <item name="android:textSize">@dimen/search_tablayout_text_size</item>
    </style>
</resources>
